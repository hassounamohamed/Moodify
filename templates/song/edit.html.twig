{% extends 'base.html.twig' %}

{% block title %}Modifier {{ song.titre }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h1 class="h4 mb-0">Modifier "{{ song.titre }}"</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.titre) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.artiste) }}
                            {{ form_widget(form.artiste, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.artiste) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.lienYoutube) }}
                            {{ form_widget(form.lienYoutube, {'attr': {'class': 'form-control'}}) }}
                            <small class="text-muted">Laissez vide si non applicable</small>
                            {{ form_errors(form.lienYoutube) }}
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.humeurPrincipale) }}
                            {{ form_widget(form.humeurPrincipale, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.humeurPrincipale) }}
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('song_show', {'id': song.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}