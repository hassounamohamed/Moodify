{% extends 'base.html.twig' %}

{% block title %}Ajouter une chanson{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Ajouter une nouvelle chanson</h1>

    <div class="card shadow p-4">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.artiste) }}
                {{ form_widget(form.artiste, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.lienYoutube) }}
                {{ form_widget(form.lienYoutube, {'attr': {'class': 'form-control'}}) }}
                <small class="text-muted">Ex: https://www.youtube.com/watch?v=...</small>
            </div>

            <div class="mb-3">
                {{ form_label(form.humeurPrincipale) }}
                {{ form_widget(form.humeurPrincipale, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('song_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i> Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}