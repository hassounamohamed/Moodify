{% extends 'base.html.twig' %}

{% block title %}{{ song.titre }} - Moodify{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .song-detail-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .youtube-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }
        .youtube-iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }
        .song-meta {
            background: rgba(255,255,255,0.9);
            border-radius: 12px;
            padding: 2rem;
            margin-top: -50px;
            position: relative;
            z-index: 2;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }
        @media (max-width: 768px) {
            .song-meta {
                margin-top: 0;
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="song-detail-container">
        <div class="mb-4">
            {% if song.lienYoutube %}
                <div class="youtube-container">
                    <iframe class="youtube-iframe"
                            src="https://www.youtube.com/embed/{{ song.lienYoutube }}?rel=0&enablejsapi=1&modestbranding=1"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen
                            loading="lazy"></iframe>
                </div>
            {% else %}
                <div class="bg-dark text-white rounded-3 d-flex align-items-center justify-content-center" 
                     style="height: 450px;">
                    <i class="fas fa-music fa-5x"></i>
                </div>
            {% endif %}
        </div>

        <div class="song-meta">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h1 class="mb-1">{{ song.titre }}</h1>
                    <h3 class="text-muted">{{ song.artiste }}</h3>
                </div>
                <span class="badge bg-{{ song.humeurPrincipale|lower }} fs-5 py-2 px-3">
                    {{ song.humeurPrincipale }}
                </span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_song_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
                
                {% if is_granted('ROLE_ADMIN') %}
                    <div>
                        <a href="{{ path('admin_song_edit', {'id': song.id}) }}" 
                           class="btn btn-outline-warning me-2">
                           <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                        <a href="{{ path('admin_song_delete', {'id': song.id}) }}" 
                           class="btn btn-outline-danger"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette chanson ?')">
                           <i class="fas fa-trash me-2"></i>Supprimer
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}