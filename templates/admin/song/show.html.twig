{% extends 'base.html.twig' %}

{% block title %}DÃ©tails de {{ song.titre }}{% endblock %}

{% block body %}
<div class="container py-5">
    <h1>{{ song.titre }}</h1>
    
    <div class="card mb-4">
        <div class="card-body">
            <p class="card-text"><strong>Artiste:</strong> {{ song.artiste }}</p>
            <p class="card-text"><strong>Humeur:</strong> {{ song.humeurPrincipale }}</p>
            {% if song.lienYoutube %}
                <div class="mt-3">
                    <iframe width="560" height="315" 
                            src="https://www.youtube.com/embed/{{ song.lienYoutube }}" 
                            frameborder="0" 
                            allowfullscreen></iframe>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('admin_song_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Retour
        </a>
        <div>
            <a href="{{ path('admin_song_edit', {'id': song.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit me-1"></i> Modifier
            </a>
        </div>
    </div>
</div>
{% endblock %}