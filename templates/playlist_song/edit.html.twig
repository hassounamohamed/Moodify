{% extends 'base.html.twig' %}

{% block title %}Nouvelle Association Playlist-Chanson{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Nouvelle Association</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.playlist) }}
                            {{ form_widget(form.playlist, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.song) }}
                            {{ form_widget(form.song, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Créer
                            </button>
                            <a href="{{ path('app_playlist_song_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}