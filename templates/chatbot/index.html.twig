{# templates/chatbot/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Chatbot Moodify{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .chat-container {
            max-height: 500px;
            overflow-y: auto;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .message-bubble {
            max-width: 80%;
            padding: 10px 15px;
            margin-bottom: 10px;
            position: relative;
        }
        .user-message {
            background-color: #e3f2fd;
            border-radius: 15px 15px 0 15px;
            margin-left: auto;
        }
        .bot-message {
            background-color: #f5f5f5;
            border-radius: 15px 15px 15px 0;
            margin-right: auto;
        }
        .message-time {
            font-size: 0.8rem;
            color: #6c757d;
        }
        .mood-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 5px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-robot me-2"></i>Chatbot Moodify
                    </h3>
                </div>
                <div class="card-body">
                    <div class="chat-container">
                        {% for conv in conversations %}
                            <div class="d-flex flex-column">
                                <div class="message-bubble user-message">
                                    <small class="message-time d-block text-end">
                                        Vous, {{ conv.createdAt|date('H:i') }}
                                    </small>
                                    <p class="mb-0">{{ conv.message }}</p>
                                </div>
                                
                                <div class="message-bubble bot-message">
                                    <small class="message-time">
                                        <span class="mood-indicator mood-{{ conv.mood }}"></span>
                                        Moodify Bot, {{ conv.createdAt|date('H:i') }}
                                    </small>
                                    <p class="mb-0">{{ conv.response }}</p>
                                </div>
                            </div>
                        {% else %}
                            <p class="text-center text-muted py-4">
                                <i class="fas fa-comment-dots fa-2x mb-2"></i><br>
                                Commencez la conversation avec notre chatbot
                            </p>
                        {% endfor %}
                    </div>
                    
                    {{ form_start(form) }}
                        {{ form_row(form.message) }}
                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Envoyer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}